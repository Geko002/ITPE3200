@model PixNote.ViewModels.ImageDetailsViewModel 
<head><link rel="stylesheet" href="~/css/ScrollView.css"></head>

<div class="ScrollviewMain">
<h2>PixNote: ScrollView</h2>

@if (Model.Image != null && Model.Image.Any())
{
    
    <div class="scroll-container">
        @foreach (var image in Model.Image) 
        {
            <div class="scroll-item image-card">
                <h5>
                    <a asp-controller="Image" asp-action="Details" asp-route-id="@image.ImageId">@image.Title</a>
                </h5>
                <!-- Display image -->
                
                <img src="@Url.Content(image.ImagePath)" alt="@image.Title" class="imger">
                
                <div class="py-4">

                    <p>@image.Description</p>
                    <small>(Uploaded on: @image.DateUploaded.ToString("g"))</small>
                </div>

                <!-- Edit Button -->
                <div class="buttons">
                <a asp-controller="Image" asp-action="Edit" asp-route-id="@image.ImageId" class="btn btn-success">Edit</a>

                <!-- Delete Button -->
                <form asp-action="Delete" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@image.ImageId" />
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this image?');">Delete</button>
                </form>
                </div>

        <div class="CommentsMain">
        <b>Comments:</b>
        <div class="comment-section">
            <div class="comment">
                @foreach (var comment in Model.Comments)
                {
                    <div class="comment">
                    <strong>@comment.User:</strong>
                    <p>@comment.CommentText</p>
                    <small>Posted on: @comment.CommentDate.ToString("g")</small>
                    </div>
                }
                <div class="comment-form">
                <h6>Share your thoughts:</h6>
                <input class="form-control" placeholder="Write a comment..."></input>
                </div>
            </div> 
        </div>
        <button class="btn btn-primary mt-4">Send Comment</button>

            </div>
            </div>
        }
    </div>
}
else
{
    <p>No images available.</p>
    <p>Still in progress</p>
}


