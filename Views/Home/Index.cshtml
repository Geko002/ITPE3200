@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/tot.css" /> 
</head>
<body>
    <partial name="_Carousel">
    </partial>

    <div class="col-md-4">
        <div class="comment-section" style="max-height: 800px; overflow-y: scroll;">
            <h5>Comments nei</h5>
            <div class="comment">
                <p><strong>Geko:</strong> Great picture!</p>
            </div>
            <div class="comment">
                <p><strong>Saim:</strong> Love the colors in this one!</p>
            </div>
            <div class="comment-form">
                <h6>Share your thoughts:</h6>
                <textarea class="form-control" rows="3" placeholder="Write a comment..."></textarea>
            </div>
        </div>
    </div>

    <div>
        <p>Share your image, show us your creative side:</p>
        <a asp-controller="Image" asp-action="Upload" class="btn btn-primary">Upload</a>
    </div>
</body>
</html>